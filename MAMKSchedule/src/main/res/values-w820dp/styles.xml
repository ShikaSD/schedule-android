<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name = "AppTheme.SnackBar">
		<item name = "android:layout_width">wrap_content</item>
		<item name = "android:layout_height">48dp</item>

		<item name = "android:layout_marginLeft">@dimen/function_button_horizontal_margin</item>
		<item name = "android:layout_marginBottom">@dimen/function_button_vertical_margin</item>

		<item name = "android:layout_alignParentBottom">true</item>

		<item name = "android:background">@drawable/toast</item>
		<item name = "android:textSize">14sp</item>
	</style>

	<style name = "AppTheme.SnackBar.Text">
		<item name = "android:layout_marginLeft">24dp</item>
		<item name = "android:layout_marginTop">16dp</item>
		<item name = "android:layout_marginBottom">12dp</item>
		<item name = "android:paddingRight">5dp</item>
	</style>

	<style name = "AppTheme.SnackBar.Button">
		<item name = "android:textStyle">bold</item>
		<item name = "android:textColor">@color/orange_accent</item>
		<item name = "android:textSize">14sp</item>

		<item name = "android:paddingRight">24dp</item>
		<item name = "android:paddingTop">16dp</item>
		<item name = "android:paddingBottom">12dp</item>
		<item name = "android:layout_marginBottom">0dp</item>
		<item name = "android:layout_marginTop">0dp</item>

		<item name = "android:background">@android:color/transparent</item>
	</style>
</resources>