<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
		  android:layout_width = "match_parent"
		  android:layout_height = "match_parent">

	<TextView
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:text="@string/edit_header"
		android:id="@+id/fragment_edit_list_header"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:layout_gravity="center"
		style="@style/AppTheme.ListHeader"
		android:visibility="gone"/>

		<ListView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/fragment_edit_list"
			android:layout_below="@+id/fragment_edit_list_header"/>

		<TextView
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:layout_centerInParent="true"
			android:textSize="14sp"
			android:id="@+id/fragment_edit_empty"/>

		<Button
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:id="@+id/fragment_edit_add"
			android:layout_below="@+id/fragment_edit_empty"
			android:layout_centerHorizontal="true"
			android:text= "@string/add"
			style="@style/AppTheme.Button"/>

</RelativeLayout>
